@model FAQCheckpoint2.Models.Accounts

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="login">
    <div class="container">
        <div class="login-form-place">

            <div class="inner-form">

                <h1>DRHC STAFF</h1>
                @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            <div class="row">

                <div class="col-lg-12 text-center">
                    <div><img class="login-logo" src="~/images/logo.png"></div>
                </div>

                <div class="col-lg-12">
                    <label for="username">USERNAME</label>
                    <div class="form-group">
                        <input type="text" name="username" id="username" class="form-control login" placeholder="Enter Username" />
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                    
                </div>

                <div class="col-lg-12">
                    <label for="password">PASSWORD</label>
                    <div class="form-group">
                        <input type="password" name="password" id="password" class="form-control login" placeholder="Enter Password"/>
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                    
                </div>

                <div class="col-lg-12 text-center">
                    <input type="submit" value="Login" class="btn btn-default login-btn" />
                </div>

            </div>

}

            </div>
        </div>
    </div>
</div>

