</head>
<body>
    <header>
        <div class="top-heading" style="background-color:#F5F5F5;">
        <div class="row">
            <div class="col-lg-3">
                <a class="navbar-brand" href="@Url.Action("Index","FAQs")">
                    <img class="site-logo" src="~/images/logo.png" alt="drhc logo">
                </a>
            </div>
            <div class="col-lg-3">
                <div class="helpline" style="margin-top:30px; font-size: 20px;">
                    <strong>Call:</strong> <span style="color:#716AB7;">1807-223-8200</span>
                </div>
            </div>
            <div class="col-lg-4 search-home">
                <form action="#" method="post" role="search" id="faq-seach-frm" class="">
                    <input type="submit" value="" name="btn-search" id="btn-search" class="search-submit">
                    <input type="search" name="search" id="search" class="search-text" placeholder="Search" autocomplete="off">
                </form>
            </div>
            <div class="col-lg-2 donate-btn">
               <button class="btn btn-success" style="margin-top:20px; margin-right:20px;">DONATE</button>
            </div>
        </div>
       
        </div>


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","FAQs")">HOME</a>
                    </li>
                    <li class="nav-item nav-parent">
                        <a class="nav-link" href="#">SERVICES&nbsp;&nbsp;<i class="fas fa-angle-down"></i></a>
                        <ul class="nav-child">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Emergency</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Tests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Laboratory</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Programs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Expectant Moms</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item nav-parent">
                        <a class="nav-link" href="#">PATIENTS & VISITORS&nbsp;&nbsp;<i class="fas fa-angle-down"></i></a>
                        <ul class="nav-child">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Visitors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Accessibility</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Food Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Patient Relations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Planning Your Stay</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Short Stays</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Visiting the Hospital</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item nav-parent">
                        <a class="nav-link" href="#">JOIN OUR TEAM&nbsp;&nbsp;<i class="fas fa-angle-down"></i></a>
                        <ul class="nav-child">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Application Form</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Job Postings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Physician Recruitment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Why DRHC</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Volunteer Program</a>
                            </li>
                        </ul>
                    </li>


                    <li class="nav-item nav-parent">
                        <a class="nav-link">ABOUT DRHC&nbsp;&nbsp;<i class="fas fa-angle-down"></i></a>
                        <ul class="nav-child">
                            <li class="nav-item">
                                @(Html.ActionLink("Newsfeed", "Index", "Articles", null, new { @class = "nav-link" }))
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Community Partners</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Meet The Board</a>
                            </li>
                            <li class="nav-item">
                                @(Html.ActionLink("Meet our Doctors","Index","Staff_Members", null, new { @class = "nav-link"}))
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Strategic Plan</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Why DRHC</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Volunteer Program</a>
                            </li>
                        </ul>
                    </li>




                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer id="footer">
        <div class="footer-nav">
            <div class="row">

                <div class="col-lg-2 col-md-2 col-sm-12">
                    <a href="@Url.Action("Index","FAQs")">
                        <img src="~/images/logo.png" alt="drhc logo" style="max-width:150px; height:auto;">
                    </a>
                </div>



                <div class="col-lg-2 col-md-2 col-sm-12">
                    <h2>SERVICES</h2>
