@model IEnumerable<FAQCheckpoint2.Models.Appointments>

@{
    ViewBag.Title = "Admin list of appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid contact">
    <div class="feature-event p-4">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / dashboard / Appointments</span>
                    <h2 class="mb-2 mt-3">List of appointments</h2>
                    <p>Welcome to the admin section of DRHC</p>
                    <div>
                        <form action="#" method="post" role="search" id="contact-seach-frm" class="search-form">
                            <input type="submit" value="" name="btn-search" id="btn-search" class="search-submit">
                            <input type="search" name="search" id="search-apts" class="search-text" placeholder="Search by name..." autocomplete="off">
                        </form>
                    </div>
                    <p class="text-danger">@TempData["ExceptionMessage"]</p>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fullname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th style="width:200px;">
                                    Actions
                                </th>
                            </tr>
                        </thead>

                        <tbody id="search-results">
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.Fullname)
                                    </td>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>

                                        @Html.ActionLink("Edit", "Update", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#contact-seach-frm").submit(function (event) {
            event.preventDefault();
        })
        $("#search-apts").on('keyup paste',function (event) {
		var search = $(this).val();
		
			$.ajax({
				type: 'POST',
				url: '@Url.Action("Search_By_Name", "MakeAppointment")',
				data: { search: search },
				success: function (data) {
					$("#search-results").html(data);
				}
			});
	    })
      });
</script>