@model FAQCheckpoint2.Models.Appointments

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid contact">
    <div class="feature-event p-4">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / dashboard / Appointments / Delete appointment</span>
                    <h3 class="mb-2 mt-3">Are you sure you want to delete this appointment?</h3>

                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Fullname)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Fullname)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Phone)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Phone)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Message)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Message)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {

                            <div class="form-actions no-color">
                                <p class="text-danger">@TempData["ExceptionMessage"]@TempData["SqlExceptionMessage"]</p>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



