@model IEnumerable<FAQCheckpoint2.Models.Appointments>

@if (Model.Count() <= 0)
{
    <p>No appointments found. Please try again</p>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td class="">
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td class="">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>

                @Html.ActionLink("Edit", "Update", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
}
