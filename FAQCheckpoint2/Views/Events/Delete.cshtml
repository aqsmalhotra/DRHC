@model FAQCheckpoint2.Models.Event

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="feature-event">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / dashboard / events / delete</span>
                    <h1 class="admin-head">Delete Event</h1>
                    <p>Are you sure you want to delete this event?</p>
                    <hr />
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.ev_title)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ev_title)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ev_description)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ev_description)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ev_start_date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ev_start_date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ev_end_date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ev_end_date)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                @Html.ActionLink("Back to List", "Admin", "Events", htmlAttributes: new { @class = "btn btn-primary btn-back" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
