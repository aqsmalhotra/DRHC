@model FAQCheckpoint2.Models.User

@{
    ViewBag.Title = "Login";
}
<div class="login">
    <div class="container">
        <div class="login-form-place">

            <div class="inner-form">
                <h1>Login</h1>
                @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()
            <div class="col-lg-12 text-center">
                <div><img class="login-logo" src="~/images/logo.png"></div>
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(u => u.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
            </div>
            <div class="col-lg-12 text-center">
                <input type="submit" class="btn btn-default login-btn" value="login" />
                <p> @ViewBag.errMsg </p>
            </div>
            <div>
                @Html.ActionLink("Create an Account", "../people/Create")
            </div>
}
            </div>
            </div>
    </div>
</div>

