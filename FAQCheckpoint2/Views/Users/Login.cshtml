@model FAQCheckpoint2.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(u => u.Username, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-default col-md-offset-2" value="login" />
    <p> @ViewBag.errMsg </p>
}
