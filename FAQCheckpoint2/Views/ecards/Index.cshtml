@model IEnumerable<FAQCheckpoint2.Models.ecard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid contact">
    <div class="feature-event p-4">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">

                    <span><i class="fas fa-home"></i> / contact / ecards</span>
                    <h2>All Ecards</h2>
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>

                    @foreach (var item in Model)
                    {
                        if (Convert.ToInt32(Session["role"]) == 1 || (Convert.ToInt32(Session["role"]) == 3 && (Convert.ToString(Session["id"]) == Convert.ToString(item.person_id))))
                        {
                            <div class="col-lg-4 col-md-4 col-sm-6 ecard" style="padding: 15px; margin: 15px; border-radius: 5px; background-color:paleturquoise">
                                <div><h3>@Html.DisplayFor(modelItem => item.card_choices.choice)</h3></div>
                                <div><p>@Html.DisplayFor(modelItem => item.card_message)</p></div>
                                <div class="text-right">
                                    @if (Convert.ToInt32(Session["role"]) == 1)
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                                    }

                                    @Html.ActionLink("Details", "Details", new { id = item.id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })

                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>