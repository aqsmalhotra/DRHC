@model FAQCheckpoint2.Models.ecard

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <span><i class="fas fa-home"></i> / contact / ecards / details</span>
    <h2>Details</h2>

    <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6" style="padding: 25px; margin: 0 auto; border-radius: 15px; background-color:paleturquoise">
        <div><h3>@Html.DisplayFor(model => model.card_choices.choice)</h3></div>
        <div><p>Dear @Html.DisplayFor(model => model.person.first_name),</p></div>
        <div><p class="text-center">@Html.DisplayFor(model => model.card_message)</p></div>
        <div><p class="text-right" style="padding: 0; margin: 0;">Yours,</p></div>
        <div><p class="text-right" style="padding: 0; margin: 0;">@Html.DisplayFor(model => model.sender_first_name) @Html.DisplayFor(model => model.sender_last_name)</p></div>
        <div><p class="text-right" style="padding: 0; margin: 0;">e-mail: @Html.DisplayFor(model => model.sender_email) </p></div>

        <div class="text-right">
            @if (Convert.ToInt32(Session["role"]) == 1)
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
            }
            @Html.ActionLink("Delete", "Delete", new { id = Model.id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })'
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</div>
    