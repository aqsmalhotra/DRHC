@model FAQCheckpoint2.Models.Job_Postings

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="feature-event">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / dashboard / faqs/ delete</span>
                    <h1 class="admin-head">Delete FAQ</h1>
                    <p>Are you sure you want to delete this job posting?</p>
                    <hr />
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @*@Html.DisplayNameFor(model => model.job_title)*@
                                <label>Job Title</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.job_title)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.job_description)*@
                                <label>Description</label>
                            </dt>

                            <dd>
                                <div class="multiline">
                                    @Html.DisplayFor(model => model.job_description)
                                </div>
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.job_type)*@
                                <label>Type</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.job_type)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.job_openings)*@
                                <label>Openings</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.job_openings)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.job_posted_date)*@
                                <label>Posted Date</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.job_posted_date)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.job_closing_date)*@
                                <label>Closing Date</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.job_closing_date)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.Department.Name)*@
                                <label>Department</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Department.Name)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                @Html.ActionLink("Back to List", "Admin", "Job_Postings", htmlAttributes: new { @class = "btn btn-primary btn-back" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
