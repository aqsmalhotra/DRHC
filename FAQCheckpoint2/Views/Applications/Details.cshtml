                            </dt>

                            <dd>
                                <div class="multiline">
                                    @Html.DisplayFor(model => model.app_comments)
                                </div>
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.app_submission_date)*@
                                <label class="bolden">Submission Date</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.app_submission_date)
