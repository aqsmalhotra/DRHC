@model FAQCheckpoint2.Models.Volunteers

@{
    ViewBag.Title = "Volunteer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="faq-banner">
</div>
<div class="container">
    <div class="feature-event">
        <div class="row">
            <div class="col-regular">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / contact / volunteer program</span>
                    <h1>Volunteer With Us</h1>
                    <p>Volunteering is a positive and rewarding experience. It encourages creativity and personal growth in a respectful and supportive 
                    environment. Also, we need you! 
                    </p>
                    <p>   
                        If you are interested in opting for a volunteering position, just fill-up this form and we will update you soon.
                    </p>
     
                        @using (Html.BeginForm("Index", "Volunteers", FormMethod.Post, new { enctype = "multipart/form-data", @id = "volunteer-frm" }))
    {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend class="d-lg-none">Enter details</legend>
                        <div class="err_msg">@ViewBag.err_msg</div>
                        <div class="form-horizontal">
  
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_name, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.volunteer_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.volunteer_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_dob, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.volunteer_dob, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                    @Html.ValidationMessageFor(model => model.volunteer_dob, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_email, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.volunteer_email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.volunteer_email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_phone, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.volunteer_phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.volunteer_phone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_interests, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="hidden" name="volunteer_interests" id="volunteer_interests" value="" />
                                    <div class="row">

                                        @foreach (var interest in ViewBag.Interests)
                    {
                        <div class="col-lg-6"> <input type="checkbox" name="list_interests" id="list_interests" value="@interest.Text" /> @interest.Text</div>
}
                                    </div>


                                    @Html.ValidationMessageFor(model => model.volunteer_interests, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_shifts, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="hidden" name="volunteer_shifts" id="volunteer_shifts" value="" />
                                    <div class="row">

                                        @foreach (var shift in ViewBag.Shifts)
                    {
                        <div class="col-lg-4"> <input type="checkbox" name="list_shifts" id="list_shifts" value="@shift.Text" /> @shift.Text</div>
}
                                    </div>
                                    @Html.ValidationMessageFor(model => model.volunteer_shifts, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_message, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.volunteer_message, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.volunteer_message, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.volunteer_cv, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    <input type="file" name="volunteer_cv" id="volunteer_cv" />
                                    <span>Files allow: doc, docx, pdf</span>
                                    @Html.ValidationMessageFor(model => model.volunteer_cv, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Submit" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </fieldset>
        
                    }
                </div>
            </div>
        </div>
    </div>
</div>
                <script>
                    $(function () {
                        var list_shifts = "";
                        var list_interests = "";
                        $('body').on('click', '#list_shifts', function () {
                            list_shifts += $(this).val() + ", ";
                            $('#volunteer_shifts').val(list_shifts);
                        });

                        $('body').on('click', '#list_interests', function () {
                            list_interests += $(this).val() + ", ";
                            $('#volunteer_interests').val(list_interests);
                        });

                    });
                </script>
