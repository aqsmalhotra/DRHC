@model FAQCheckpoint2.Models.Application

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="feature-event">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / dashboard / applications / delete</span>
                    <h1 class="admin-head">Delete Application</h1>
                    <p>Are you sure you want to delete this application?</p>
                    <hr />
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @*@Html.DisplayNameFor(model => model.Job_Postings.job_title)*@
                                <label class="bolden">Applied Position</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Job_Postings.job_title)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.app_first_name) @Html.DisplayNameFor(model => model.app_last_name)*@
                                <label class="bolden">Name</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.app_first_name) @Html.DisplayFor(model => model.app_last_name)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.app_phone)*@
                                <label class="bolden">Phone</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.app_phone)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.app_email)*@
                                <label class="bolden">Email</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.app_email)
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.app_comments)*@
                                <label class="bolden">Comments</label>
                            </dt>

                            <dd>
                                <div class="multiline">
                                    @Html.DisplayFor(model => model.app_comments)
                                </div>
                            </dd>

                            <dt>
                                @*@Html.DisplayNameFor(model => model.app_submission_date)*@
                                <label class="bolden">Submission Date</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.app_submission_date)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                @Html.ActionLink("Back to List", "Index", "Applications", htmlAttributes: new { @class = "btn btn-primary btn-back" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
