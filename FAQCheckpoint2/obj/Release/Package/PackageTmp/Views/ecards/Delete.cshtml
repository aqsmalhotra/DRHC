@model FAQCheckpoint2.Models.ecard

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid contact">
    <div class="feature-event p-4">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12">
                @Html.Partial("~/Views/Shared/_Admin_Nav.cshtml")
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="feature-content">
                    <span><i class="fas fa-home"></i> / contact / ecards / delete</span>
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.Label("Sender")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sender_first_name) @Html.DisplayFor(model => model.sender_last_name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.sender_email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.sender_email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.card_message)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.card_message)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.card_choices.choice)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.card_choices.choice)
                            </dd>

                            <dt>
                                @Html.DisplayName("Recipient")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.person.first_name) @Html.DisplayFor(model => model.person.last_name)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
        {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>